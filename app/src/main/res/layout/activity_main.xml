<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context="net.callofdroidy.fastrate.view.ActivityMain">

    <EditText
        android:id="@+id/et_input"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:gravity="center_vertical|end"
        android:inputType="numberDecimal"
        android:hint="@string/input_field_hint"
        />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner_base_currency"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_below="@id/et_input"
        android:layout_alignParentEnd="true"

        />

    <GridView
        android:id="@+id/gv_convert_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner_base_currency"
        android:scrollbars="horizontal"
        android:numColumns="3"
        android:horizontalSpacing="8dp"
        android:verticalSpacing="8dp"
        android:columnWidth="24dp"
        android:stretchMode="columnWidth"
        android:layout_centerInParent="true"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        />

</RelativeLayout>
